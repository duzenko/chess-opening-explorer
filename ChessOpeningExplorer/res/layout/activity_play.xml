<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="name.duzenko.chessopeningexplorer.play.PlayActivity" >

	<view
		class="name.duzenko.chessopeningexplorer.play.ChessBoard"
    	android:id="@+id/chessboard"
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"/>

	<TextView
	    android:id="@+id/textStatus"
	    android:textStyle="bold"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/chessboard"
	    android:layout_alignRight="@+id/chessboard"
	    android:layout_below="@+id/chessboard"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/textMoves"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/textThinking"
	    android:layout_alignRight="@+id/textThinking"
	    android:layout_above="@+id/textThinking"
	    android:layout_below="@+id/textStatus"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/textThinking"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignRight="@+id/textStatus"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
